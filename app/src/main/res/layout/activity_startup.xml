<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="scse.vit.calendar.StartupActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bacsmall"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logoc"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCSE Calendar"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:textColor="@color/orange"
            android:fontFamily="@font/sea"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Initializing app..."
            android:textColor="@color/gray"
            android:layout_gravity="center"
            android:id="@+id/message"
            android:layout_margin="20dp"
            android:textSize="18dp"/>
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/vortex"
            android:id="@+id/load"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/buttonslayer"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:visibility="gone"
            android:weightSum="2">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Student"
                android:id="@+id/studentbutton"
                android:background="@drawable/buttonbg"
                android:layout_margin="10dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Faculty"
                android:id="@+id/facultybutton"
                android:background="@drawable/buttonbg"
                android:layout_margin="10dp"/>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:background="@drawable/buttonbg"
            android:id="@+id/updatebut"/>
    </LinearLayout>

</RelativeLayout>
